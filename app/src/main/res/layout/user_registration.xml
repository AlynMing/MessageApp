<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activities.UserRegistrationActivity">

    <ImageView
        android:id="@+id/login_icon2"
        android:layout_width="215dp"
        android:layout_height="77dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toTopOf="@+id/login_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075"
        app:srcCompat="@mipmap/ic_icon" />

    <EditText
        android:id="@+id/userProf_fname"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint=" First Name"
        android:inputType="textPersonName"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <EditText
        android:id="@+id/userProf_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638" />

    <EditText
        android:id="@+id/userProf_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835" />

    <EditText
        android:id="@+id/userProf_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint=" Username"
        android:inputType="textPersonName"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737" />

    <EditText
        android:id="@+id/userProf_lname"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint=" Last Name"
        android:inputType="textPersonName"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543" />

    <Button
        android:id="@+id/btn_Update"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:background="#5c5779"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="#5c5779"
        android:text="CANCEL"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Setup"
        android:textColor="#5c5779"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />


    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="153dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="79dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_ProfilePic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userProf_fname"
        app:layout_constraintTop_toTopOf="@+id/title"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="32dp"
        android:background="#5c5779"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-7dp" />

    <Button
        android:id="@+id/btn_ProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="456dp"
        android:text="Upload Profile Pic"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>